# ===============================
# NeuroVest - .env.example
# Copy to .env and fill the blanks
# ===============================

# --- Paths & data ---
DATA_DIR=./data
CACHE_DIR=./data_cache
MODELS_DIR=./models
LOGS_DIR=./logs
OUTPUT_DIR=./outputs

# --- Core switches ---
OFFLINE_MODE=0                 # 1 = use only local cached data
PREDICT_VARIANT=forward_returns
TRAIN_USE_FORWARD_RETURNS=1
GLOBAL_MIN_CONF=0.65
NET_TIMEOUT=15
REGIME_TAG=default

# --- Model & artifact paths ---
MODEL_PATH=models/market_crash_model.pkl
MODEL_PATH_FWD=models/market_crash_model_fwd.pkl
THRESH_PATH=models/thresholds.json
LABEL_MAP_PATH=models/label_map.json

# --- Symbols & horizons (optional defaults) ---
TICKERS=SPY
PREDICTION_HORIZON_DAYS=1
RANDOM_SEED=42
TRAIN_START=2010-01-01
TRAIN_END=2024-12-31
VALIDATION_END=2025-06-30
TIMEZONE=America/New_York
MARKET_OPEN=09:30
MARKET_CLOSE=16:00

# --- External data (optional) ---
ALPHA_VANTAGE_KEY=
NEWS_API_KEY=
FRED_API_KEY=
POLYGON_API_KEY=
FMP_API_KEY=

# --- Notifications (optional) ---
TELEGRAM_TOKEN=
TELEGRAM_CHAT_ID=

# --- Reddit scraping (optional) ---
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USERNAME=
REDDIT_PASSWORD=
REDDIT_USER_AGENT=neurovest-bot/0.1
REDDIT_REDIRECT_URI=http://localhost:8080

# --- Backtest switches (optional) ---
BT_TOPK_MODE=prob            # prob | ev | hybrid
BT_TOPK_K=3
BT_TOPK_MIN_PROB=0.6

# --- API pilot (optional) ---
API_HOST=0.0.0.0
API_PORT=8000
API_AUTH_TOKEN=change-me
SIGNAL_HISTORY_DB=sqlite:///neurovest_signals.sqlite
